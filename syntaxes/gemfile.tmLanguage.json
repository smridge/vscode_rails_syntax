{
  "scopeName": "gemfile",
  "injectionSelector": "L:source -comment -string",
  "patterns": [
    { "include": "#functions" }
  ],
  "repository": {
    "functions": {
      "patterns": [
        {
          "name": "keyword.other.special-method.bundler",
          "match": "(?<![+\\-*\\/=><&%!^\\.()|])\\b(source|ruby|gem)\\b(?=\\s+[\"|\\'])",
          "comment": "https://bundler.io/man/gemfile.5.html"
        },
        {
          "name": "keyword.other.special-method.bundler",
          "match": "(?<![+\\-*\\/=><&%!^\\.()|])\\b(group)\\b(?=\\s+[:])",
          "comment": "https://bundler.io/man/gemfile.5.html"
        }
      ]
    }
  }
}
