{
  "scopeName": "abstract_controller",
  "injectionSelector": "L:source -comment -string",
  "patterns": [
    {
      "include": "#callbacks"
    }
  ],
  "repository": {
    "callbacks": {
      "patterns": [
        {
          "name": "support.function.callback.abstract-controller.rails",
          "match": "\\b(after_action|append_after_action|append_around_action|append_before_action|around_action|before_action|prepend_after_action|prepend_around_action|prepend_before_action|skip_after_action|skip_around_action|skip_before_action)\\b(?![:!?.+]|\\s+[=+])",
          "comment": "https://api.rubyonrails.org/classes/AbstractController/Callbacks.html"
        }
      ]
    }
  }
}
